    <ul class="center-align pagination">
    </ul>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
{{meta.pagination.pages}}
<article class="post-card z-depth-1" style="opacity:0">
  <div class="row">
  <div class="col m4">
    <div class="post-card-img" style="background:url({{image}});background-size:cover;">
      ""
    </div>
  </div>
  <div class="col m8">
    <header class="post-header">
      <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
    </header>
    <section class="post-excerpt">
        <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
    </section>
    <footer class="post-meta">
      <div class="chip">
        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        {{author}}
      </div>
        {{tags prefix=" on "}}

    </footer>
  </div>
</div>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
<ul class="center-align pagination">
</ul>

<script>
$(document).ready(function(){
  var pages = {{pagination.pages}};
  var page = {{pagination.page}};
  var next = {{#if pagination.next}}{{pagination.next}}{{else}}0{{/if}};
  var prev = {{#if pagination.prev}}{{pagination.prev}}{{else}}0{{/if}};
  var pageUrl = "{{page_url}}";

  if(prev > 0)
    $(".pagination").append("<li class='waves-effect'><a href='{{page_url pagination.prev}}'><i class='material-icons'>chevron_left</i></a></li>");
    else {
        $(".pagination").append("<li class='disabled'><a><i class='material-icons'>chevron_left</i></a></li>");
    }

  for(var i = 1; i <= pages;i++){
    if(i == page){
      $(".pagination").append(
          "<li class='active' role='presentation'><a href='/page/" + i +"'>" + i + "</a></li>");
    }
    else {
      $(".pagination").append(
          "<li class='waves-effect' role='presentation'><a href='/page/" + i + "'>" + i + "</a></li>");
    }
  }

  if(next > 0)
    $(".pagination").append("<li class='waves-effect'><a href='{{page_url pagination.next}}'><i class='material-icons'>chevron_right</i></a></li>");
    else {
        $(".pagination").append("<li class='disabled'><a><i class='material-icons'>chevron_right</i></a></li>");
    }

  $(".post-card").each(function(index){
    $(this).delay(200*index).animate(
      {
        opacity:1
      },500
    );
  });
});
</script>
