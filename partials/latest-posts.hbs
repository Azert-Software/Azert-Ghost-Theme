{{! This is the post loop - each post will be output using this markup }}
<section class="section grey lighten-3">
  <div class="row">
    <div class="container">
        <header class="parent">
         <h5 class="left">Latest Posts</h5>
         <a class="right-link" href="/page/2" tooltip="View older posts">View older posts<i class="fa fa-chevron-right"></i></a>
        </header>
        <div class="row">
          {{#foreach posts}}
            <div class="col s12 m4">
              <a href={{url}} title="Read {{title}}">
              <article class="card">
                <div class="card-image" style="{{#if image}}background:url({{image}}) no-repeat center center;background-size:cover;{{/if}}">
                  <span class="card-title">{{title}}<br />
                  <small>{{date published_at format="DD MMMM YYYY"}}</small></span>
                </div>
              </article>
            </a>
            </div>
          {{/foreach}}
        </div>
      </div>
    </div>
</div>
