{{! This is the post loop - each post will be output using this markup }}
<section class="section grey lighten-3">
  <div class="row">
    <div class="container">
        <header class="parent">
         <h5 class="left">Latest Posts</h5>
         <a class="right-link" href="/page/2" tooltip="View older posts">View older posts<i class="fa fa-chevron-right"></i></a>
        </header>
        <div class="row">
          {{#foreach posts}}
            <div class="col s12 m4">
              <article class="card">
                <div class="card-image" style="{{#if image}}background:url({{image}}) no-repeat center center;background-size:cover;{{/if}}">
                  <span class="card-title">{{title}}</span>
                </div>
                <div class="card-content">
                  <small>{{date published_at format="DD MMMM YYYY"}}</small>
                    <p>{{#if meta_description}}{{meta_description}}...{{else}}{{excerpt words="12"}}...{{/if}}</p>
                </div>
                <footer class="card-action">
                  <a href="{{url}}">Read Post</a>
                </footer>
              </article>
            </div>
          {{/foreach}}
        </div>
      </div>
    </div>
</div>
