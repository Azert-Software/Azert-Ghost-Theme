{{! This is the post loop - each post will be output using this markup }}
<div class="row">
    {{#foreach posts limit="6"}}
      <div class="col s12 m4">
        <article class="card">
          <div class="card-image">
            <img src="{{author.image}}" alt="{{{title}}}" />
            <span class="card-title">{{title}}</span>
          </div>
          <div class="card-content">
            <small>{{date published_at format="DD MMMM YYYY"}}</small>
              <p>{{excerpt words="12"}}...</p>
          </div>
          <footer class="card-action">
            <a href="{{url}}">Read Post</a>
          </footer>
        </article>
      </div>
    {{/foreach}}
</div>
